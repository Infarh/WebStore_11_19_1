@model IEnumerable<UserOrderViewModel>

@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "Заказы";
}

<table class="table">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Сумма заказа</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.TotalSum.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
