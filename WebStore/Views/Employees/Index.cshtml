@model IEnumerable<WebStore.ViewModels.EmployeeView>

@{
    ViewBag.Title = "Сотрудники";
}

<h3>@ViewBag.Title</h3>

<table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Возраст</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>
                <a asp-action="Details" asp-route-Id="@employee.Id">
                    @employee.SecondName
                </a>
            </td>
            <td>
                <a asp-action="DetailsName" 
                   asp-route-FirstName="@employee.FirstName"
                   asp-route-LastName="@employee.SecondName">
                    @employee.FirstName
                </a>
            </td>
            <td>@employee.Patronymic</td>
            <td>@employee.Age</td>
        </tr>
    }
    </tbody>
</table>